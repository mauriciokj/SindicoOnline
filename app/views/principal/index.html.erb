	<div class="well">
		<table class="table">
			<thead>
				<tr>
					<th>Conta</th>
					<th>Vencimento</th>
					<th>Status</th>
					<th>Valor (R$)</th>
					<th>Detalhes</th>
				</tr>
			</thead>
			<tbody>
				<% @contas.each do |conta| %>
				<tr>
					<td><%= conta['tipo'] %></td>
					<td><%= I18n.l(conta['vencimento']) %></td>
					<td><%= conta['status'] %></td>
					<td class='text-right'><%= number_to_currency(conta['valor'])  %></td>
